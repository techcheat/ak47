#include <stdio.h>  

int arr[20], size; 


void disp(); 
void sort();
void reverse();  
void search(int val); 

int main() {
    int ch, val; 
    
    printf("Enter array size: ");
    scanf("%d", &size); 

    printf("Enter %d elements: ", size);
    for(int i = 0; i < size; i++)  
        scanf("%d", &arr[i]); 

    do {
        printf("\n**** Menu ****\n");
        printf("1.Display \n 2.Sort \n 3.Reverse\n4.Search  \n5.Exit\n"); 
        printf("Enter choice: ");
        scanf("%d", &ch); 

        switch(ch) { 

            case 1: disp(); break;
            case 2: sort(); break;
            case 3: reverse(); break;
            case 4: 
                printf("Enter value to search: ");
                scanf("%d", &val);
                search(val); 
                break;
            case 5: return 0;
            default: printf("Invalid choice! Try again.\n");
        }
    } while(1);  
}


void disp() {
    printf("Array: ");
    for(int i = 0; i < size; i++)  
        printf("%d ", arr[i]);
    printf("\n");
} 


void sort() {
for(int i = 0; i < size - 1; i++) {                    
 for(int j = 0; j < size - i - 1; j++) {
            if(arr[j] > arr[j + 1]) {
                int temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
    printf("Sorted ");
    disp();
}

void reverse() {
    for(int i = 0, j = size - 1; i < j; i++, j--) {
        int temp = arr[i];
        arr[i] = arr[j];
        arr[j] = temp;
    }
    printf("Reversed ");
    disp();
}


void search(int val) {
    for(int i = 0; i < size; i++) {
        if(arr[i] == val) {
            printf("Value found at position %d.\n", i);
            return;
        }
    }
    printf("Value not found.\n");
}
